from django.db import models

class User(models.Model):
    name = models.CharField(max_length=30)
    password = models.CharField(max_length=15)
    email = models.EmailField('Email Adress')
    
class Problem(models.Model):
    title = models.CharField (max_length = 30)
    place = models.CharField (max_length = 30)
    desc = models.CharField (max_length = 300)
    tags = models.CharField (max_length = 50)
    status = models.CharField (max_length = 10)
    rq_ppl =models.IntegerField (default = 1)
    pub_date = models.DateTimeField('date published')
    deadline= models.DateTimeField('Dead Line')
    
class Solution(models.Model):
    user_id = models.ForeignKey(User)
    problem_id = models.ForeignKey(Problem)
    desc = models.CharField (max_length = 300)
    status = models.CharField (max_length = 10)


class Ignore(models.Model):
    user_id = models.ForeignKey(User, relatad_name ='user_id')
    ref_user_id = models.CharField (User, related_name='red_user_id')


    
    